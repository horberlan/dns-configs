```elixir
defmodule PiHoleCommands do
  def rebuild do
    PiHoleManager.run("pihole restartdns")
    PiHoleManager.run("pihole -g")
  end

  def status do
    PiHoleManager.run("pihole status")
  end

  def disable(min) do
    PiHoleManager.run("pihole disable #{min}")
  end
end
